/* Generate Tachyons like class names for all my custom colours */
@each $color in background, highlight, text, accent, accent-light, accent-dark, secondary, secondary-light, secondary-dark, visited, pusher {
  .$(color), .hover-$(color):hover {
    color: var(--$(color))
  }

  .bg-$(color) {
    background-color: var(--$(color))
  }

  .b--$(color) {
    border-color: var(--$(color))
  }
}
