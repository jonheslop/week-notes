<ol reversed class="list ma0 mb5 pa0">
{% for post in postslist | reverse %}
  <li class="lh-copy bt bw1 b--highlight relative{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="db link text hover-accent f4 f3-l pv3 pr6-ns">
      {% if post.data.title %}{{ post.data.title | widont | safe }}{% else %}<code>{{ post.url }}</code>{% endif %}
      <time class="f6 f5-ns lh-title mt2 db dib-ns absolute-ns right-0" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    </a>
  </li>
{% endfor %}
</ol>
