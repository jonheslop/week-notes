---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article class="markdown">
  <header>
    <time class="f5 f4-ns fw5 i accent" datetime="{{ date | htmlDateString }}">Week {{ date | readableWeek }}</time>
    <time class="f5 f4-ns fw5 i accent fr" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
    <h1 class="f2 f1-m f-subheadline-l lh-title mt0 measure-narrow mt1 pt4 mb4 mb5-ns bt bw1 b--highlight">{{ title }}</h1>
  </header>

  {{ content | safe }}
</article>

<p class="f4 f3-ns lh-copy mt0 mt1 pt2 mb4 mb5-ns bt bw1 b--highlight">
  <a class="link accent" href="{{ '/' | url }}">← Home</a>
</p>
